<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/popular_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="157dp"
    android:layout_height="180dp"
    android:background="@color/white"
    android:padding="7dp">

    <ImageView
        android:id="@+id/popular_image"
        android:layout_width="143dp"
        android:layout_height="86dp"
        android:background="@color/popular_image_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Photography"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/left_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/count1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:text="231"/>

                <TextView
                    android:id="@+id/lorem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Lorem"/>

            </LinearLayout>

            <View
                android:id="@+id/vertical_line"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#979797"
                android:layout_toRightOf="@id/left_part"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>


            <LinearLayout
                android:id="@+id/right_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/vertical_line">

                <TextView
                    android:id="@+id/count2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:text="3461"/>

                <TextView
                    android:id="@+id/lorem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Lorem Test"
                    android:layout_below="@id/count1"/>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>